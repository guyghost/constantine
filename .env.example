# Multi-Exchange Configuration
# Enable/disable exchanges (set to true to connect)
ENABLE_HYPERLIQUID=true
ENABLE_COINBASE=true
ENABLE_DYDX=false

# Hyperliquid Exchange Configuration
# Get API credentials from: https://app.hyperliquid.xyz/
# 1. Connect your wallet to Hyperliquid
# 2. Go to Settings > API Keys
# 3. Create a new API key with appropriate permissions
HYPERLIQUID_API_KEY=your_hyperliquid_api_key_here
HYPERLIQUID_API_SECRET=your_hyperliquid_api_secret_here

# Coinbase Exchange Configuration
# Get API credentials from: https://www.coinbase.com/settings/api
# 1. Sign in to Coinbase Advanced Trade
# 2. Go to API section
# 3. Create a new API key with "trade" and "view" permissions
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# dYdX Exchange Configuration
# dYdX supports two authentication methods:
# 1. API Key authentication (leave DYDX_MNEMONIC empty)
# 2. Mnemonic authentication (set DYDX_MNEMONIC and leave API keys empty)
#
# For API Key authentication:
# DYDX_API_KEY=your_dydx_api_key_here
# DYDX_API_SECRET=your_dydx_api_secret_here
# DYDX_WALLET_ADDRESS=your_dydx_wallet_address_here
# DYDX_SUBACCOUNT_NUMBER=0
#
# For Mnemonic authentication (RECOMMENDED):
# DYDX_MNEMONIC=your twelve word mnemonic phrase here
# DYDX_SUBACCOUNT_NUMBER=0
# DYDX_API_KEY=
# DYDX_API_SECRET=
# DYDX_WALLET_ADDRESS=
DYDX_MNEMONIC=your twelve word mnemonic phrase here
DYDX_SUBACCOUNT_NUMBER=0
DYDX_API_KEY=
DYDX_API_SECRET=
DYDX_WALLET_ADDRESS=

# Trading Configuration
TRADING_SYMBOL=BTC-USD
INITIAL_BALANCE=10000

# Strategy Parameters
SHORT_EMA_PERIOD=9
LONG_EMA_PERIOD=21
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
TAKE_PROFIT_PERCENT=0.5
STOP_LOSS_PERCENT=0.25

# Risk Management
MAX_POSITION_SIZE=1000
MAX_POSITIONS=3
MAX_LEVERAGE=5
MAX_DAILY_LOSS=100
MAX_DRAWDOWN=10
RISK_PER_TRADE=1
MIN_ACCOUNT_BALANCE=100
DAILY_TRADING_LIMIT=50
COOLDOWN_PERIOD_MINUTES=15
CONSECUTIVE_LOSS_LIMIT=3

# Logging
LOG_LEVEL=info  # Options: debug, info, warn, error
LOG_FILE=scalping-bot.log

# Advanced Configuration
# Exchange-specific settings
HYPERLIQUID_MAX_LEVERAGE=50
COINBASE_MAX_LEVERAGE=10
DYDX_MAX_LEVERAGE=25

# Connection settings
WEBSOCKET_RECONNECT_ATTEMPTS=5
WEBSOCKET_RECONNECT_DELAY_SECONDS=5
API_REQUEST_TIMEOUT_SECONDS=30
API_RATE_LIMIT_BUFFER=0.8

# Data aggregation settings
PRICE_AGGREGATION_METHOD=vwap  # Options: vwap, median, last
ORDERBOOK_DEPTH=20
CANDLE_HISTORY_HOURS=24
